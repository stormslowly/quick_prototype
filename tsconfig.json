{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": false,
    "allowJs": true,
    "outDir": "dist/",
    "typeRoots": [
      "typings",
      "./node_modules/@types/"
    ],
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "src/test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

